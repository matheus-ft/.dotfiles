" Options
set clipboard=unnamedplus
set completeopt=noinsert,menuone,noselect
set hidden
set inccommand=split
set mouse=a
set number
set splitbelow splitright
set title
set ttimeoutlen=0
set wildmenu

" Tabs size
set expandtab
set shiftwidth=4
set tabstop=4

" Syntax, color, and italics support
filetype plugin indent on
syntax on
set t_Co=256
let &t_ZH="\e[3m"
let &t_ZR="\e[23m"

